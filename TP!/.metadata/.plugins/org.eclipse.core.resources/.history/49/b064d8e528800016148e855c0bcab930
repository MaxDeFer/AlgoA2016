CategorieBus Ligne::couleurToCategorie(std::string couleur) {

	CategorieBus CatTemp;

	if (couleur = "97BF0D")
	{
		CatTemp = METRO_BUS;
	}
case "97BF0D" : CatTemp = METRO_BUS;   break;
case "013888" : std::cout << "green\n"; break;
case "E04503" : std::cout << "blue\n";  break;
case "1A171B" : return METRO_BUS;
return CatTemp;
}

